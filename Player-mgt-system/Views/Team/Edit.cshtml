@model Player_mgt_system.Models.Team

@{
    ViewData["Title"] = "Edit";
}
<div class="card">
  <div class="card-header">
    Edit Team Details
  </div>
  <div class="card-body">
    
             <form asp-action="Edit">
              <div class="row">
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <input type="hidden" asp-for="TeamId" />
                 <div class="form-group col-md-6">
                     <label asp-for="TeamName" class="control-label"></label>
                     <input asp-for="TeamName" class="form-control" />
                     <span asp-validation-for="TeamName" class="text-danger"></span>
                 </div>
                 <div class="form-group col-md-6">
                     <label asp-for="TeamOwner" class="control-label"></label>
                     <input asp-for="TeamOwner" class="form-control" />
                     <span asp-validation-for="TeamOwner" class="text-danger"></span>
                 </div>
                 <div class="form-group col-md-6">
                     <label asp-for="TeamState" class="control-label"></label>
                     <input asp-for="TeamState" class="form-control" />
                     <span asp-validation-for="TeamState" class="text-danger"></span>
                 </div>
                 <div class="form-group col-md-6">
                     <label asp-for="Description" class="control-label"></label>
                     <input asp-for="Description" class="form-control" />
                     <span asp-validation-for="Description" class="text-danger"></span>
                 </div>
              <div class="form-group col-md-6 mt-2">
                  <input type="submit" value="Edit" class="btn btn-success" />
              </div>
               </div>
             </form>
    
     
  </div>
</div>


<div>

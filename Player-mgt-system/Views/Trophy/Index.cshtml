@model IEnumerable<Player_mgt_system.Models.Trophy>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create" style="color: green"><i class="fa-solid fa-file-circle-plus"></i> Create New Trophy</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrophyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrophyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TrophyId" style="color: green"> <i class="fa-regular fa-pen-to-square"></i> Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TrophyId"> <i class="fa-regular fa-eye"></i> View</a> |
                <a asp-action="Delete" asp-route-id="@item.TrophyId" style="color: red"><i class="fa-regular fa-trash"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
